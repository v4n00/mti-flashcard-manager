{
	"compilerOptions": {
		"target": "ES6",
		"module": "commonjs",
		"strict": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"lib": ["ES6"]
	},
	"include": ["src/**/*.ts", "src/index.ts"],
	"exclude": ["node_modules"]
}
